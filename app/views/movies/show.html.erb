<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @movie.title %>
</p>

<p>
  <strong>Duration:</strong>
  <%= @movie.duration %>
</p>
<p>
  <strong>Synopsis:</strong>
  <%= @movie.synopsis %>
</p>
<p>
  <strong>Year:</strong>
  <%= @movie.year %>
</p>
<p>
  <strong>Category:</strong>
  <%= @movie.category %>
</p>

<p>
  
  <% @comments.each do |comment| %>
    <strong>Comment author:</strong>
    <%= comment.author %>
    <strong>Comment body:</strong>
    <%= comment.body %><br>
  <% end %>
</p>

